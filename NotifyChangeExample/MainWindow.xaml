<Window x:Class="NotifyChangeExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotifyChangeExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid Background="{Binding Background.Color}">
        <DockPanel LastChildFill="False">
            <StackPanel Width="150" DockPanel.Dock="Top">
                <TextBlock Text="{Binding Person.Name, StringFormat=Welcome {0}}"></TextBlock>
                <TextBox Text="{Binding Person.Name, Mode=OneWayToSource,
                    UpdateSourceTrigger=PropertyChanged}"/>
                <Button> Submit </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" 
                        Orientation="Horizontal"
                        DockPanel.Dock="Bottom">
                <Button Click="red_Click" Content="Red BackGround"/>
                <Button Click="blue_Click" Content="Blue BackGround"/>
                <Button Click="yellow_Click" Content="Yellow BackGround"/>
            </StackPanel>
         </DockPanel>
    </Grid>
</Window>
